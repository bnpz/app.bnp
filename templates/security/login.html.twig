{% extends 'frontend/leftLayout.html.twig' %}
{% block rightColumn %}
    <div class="col-sm-4">
        <div class="content">
            <hr>
            <form method="post" action="{{ url('app_security_login') }}">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="inputEmail">Email</label>
                    <input type="email" name="email" value="{{ last_username }}" id="inputEmail" class="form-control" required autofocus>

                </div>
                <div class="form-group">
                    <label for="inputPassword">{{ 'entityField.password'|trans }}</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="_remember_me">
                    <label class="form-check-label" for="rememberMe">{{ 'label.rememberMe'|trans }}</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <br>

                <button class="btn btn-lg btn-outline-success" type="submit">
                    {{ 'label.login'|trans }}
                </button>
            </form>


        </div>

    </div>

{% endblock %}
