{% extends "archive/base.html.twig" %}
{% block title %}
    {{ performance.title }}
{% endblock %}
{% block leftColumn %}
    {#{{ parent() }}#}
    <p class="text-right">{{ performance.season }}</p>
    <p class="text-right">{{ performance.stage}}</p>
    <h3 class="pageTitle text-right">{{ performance.title }}</h3>
    <hr>

    <ul class="list-inline float-right">
        <li class="list-inline-item">
            {{ include('inc/button.index.html.twig',{'route': 'archive_performance_index', 'label': 'label.performances' |trans}) }}
        </li>
        {% if is_granted("ROLE_EDITOR") %}
            <li class="list-inline-item">
                {{ include('inc/button.edit.html.twig', {'route': 'archive_performance_edit', 'id': performance.id}) }}
            </li>
            <li class="list-inline-item">
                {{
                    include('inc/button.edit.html.twig',
                        {'route': 'archive_performance_authorship_add', 'id': performance.id, 'label': 'label.authorship' |trans})
                }}
            </li>
            {#<li class="list-inline-item">
                {{ include('inc/button.delete.html.twig', {'route': 'general_contact_delete', 'id': contact.id}) }}
            </li>#}
        {% endif %}
    </ul>
{% endblock %}
{% block rightColumn %}

    <p>
        {% for authorship in performance.authorships %}
            <span>{{ authorship.authorshipTypeLabel ? authorship.authorshipTypeLabel : authorship.authorshipType.name }}:</span>

            <span>{{ authorship.authorLabel ? authorship.authorLabel : authorship.author.fullName }} </span>
            <br>
        {% endfor %}
     </p>
    <hr>
    {{ include('inc/entity.item.info.html.twig', {'entity': performance}) }}
{% endblock %}


