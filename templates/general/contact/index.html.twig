{% extends "frontend/fullPageLayout.html.twig" %}
{% block title %}
    {{ 'label.addressBook'|trans }}
{% endblock %}
{% block full_page %}

    <h1 class="pageTitle float-left">{{ 'label.addressBook'|trans }}</h1>
    <h3 class="float-right">
        {{ include('inc/button.new.html.twig', {'route': 'general_contact_new'}) }}
    </h3>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-sm-12">
            {{ render(controller('App\\Controller\\General\\ContactController::searchBar')) }}
        </div>
    </div>


    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                <a href="{{ path(app.request.attributes.get('_route'), {'page': paginator.currentPage, 'orderBy': 'company', 'orderDirection': 'asc'}) }}">
                    {{ 'entityField.company' |trans }}
                </a>
            </th>
            <th>
                <a href="{{ path(app.request.attributes.get('_route'), {'page': paginator.currentPage, 'orderBy': 'firstName', 'orderDirection': 'asc'}) }}">
                    {{ 'entityField.firstName' |trans }}
                </a>
            </th>
            <th>
                <a href="{{ path(app.request.attributes.get('_route'), {'page': paginator.currentPage, 'orderBy': 'lastName', 'orderDirection': 'asc'}) }}">
                    {{ 'entityField.lastName' |trans }}
                </a>
            </th>
            <th>
                <a href="{{ path(app.request.attributes.get('_route'), {'page': paginator.currentPage, 'orderBy': 'email', 'orderDirection': 'asc'}) }}">
                    {{ 'entityField.email' |trans }}
                </a>
            </th>
            <th>
                <a href="{{ path(app.request.attributes.get('_route'), {'page': paginator.currentPage, 'orderBy': 'phone', 'orderDirection': 'asc'}) }}">
                    {{ 'entityField.phone' |trans }}
                </a>
            </th>
            <th>
                <a href="{{ path(app.request.attributes.get('_route'), {'page': paginator.currentPage, 'orderBy': 'firstName', 'orderDirection': 'asc'}) }}">
                    {{ 'entityField.mobile' |trans }}
                </a>
            </th>

            {#<th></th>#}
        </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
                <tr>
                    <td><a href="{{ path('general_contact_show', {'id': contact.id}) }}">{{ contact.company }}</a></td>
                    <td><a href="{{ path('general_contact_show', {'id': contact.id}) }}">{{ contact.firstName }}</a></td>
                    <td><a href="{{ path('general_contact_show', {'id': contact.id}) }}">{{ contact.lastName }}</a></td>
                    <td><a href="{{ path('general_contact_show', {'id': contact.id}) }}">{{ contact.email }}</a></td>
                    <td>{{ contact.phone }}</td>
                    <td>{{ contact.mobile }}</td>

                    {#<td class="text-center">
                        {{ include('inc/show.edit.links.html.twig',
                            {
                                'showRoute': 'general_contact_show',
                                'editRoute': 'general_contact_edit',
                                'id': contact.id
                            }
                            )
                        }}
                    </td>#}
                </tr>
        {% else %}
            <tr>
                <td colspan="13">{{ 'label.noRecords'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if paginator.hasToPaginate %}
        {{ include('inc/paginator.html.twig') }}
    {% endif %}
{% endblock %}


